<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set relay"
        android:id="@+id/relaySet"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_below="@+id/request"
        android:layout_toRightOf="@+id/switch2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="82dp"
        android:layout_height="wrap_content"
        android:id="@+id/ip"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/request"
        android:layout_toStartOf="@+id/request" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="listen"
        android:id="@+id/listen"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="right"
        android:layout_below="@+id/relaySet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relay2"
        android:id="@+id/switch2"
        android:checked="false"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_below="@+id/request"
        android:layout_toRightOf="@+id/switch1"
        android:layout_toEndOf="@+id/switch1"
        android:layout_above="@+id/listen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="request"
        android:id="@+id/request"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:layout_alignBaseline="@+id/ip"
        android:layout_alignBottom="@+id/ip"
        android:layout_alignRight="@+id/relaySet"
        android:layout_alignEnd="@+id/relaySet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textListen"
        android:layout_row="0"
        android:layout_column="4"
        android:layout_below="@+id/listen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Relay1"
        android:id="@+id/switch1"
        android:checked="false"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_above="@+id/listen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/request" />

</RelativeLayout>
